<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{reporte.id}}" method="POST"> 
                        <div class="form-group">
                            <input type="text" value = "{{reporte.title}}" class="form-control" name="title" placeholder="Title" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="observacion" value = "{{reporte.observacion}}" class="form-control" placeholder="Observacion">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control" placeholder="Description">{{reporte.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success w-100">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container p-4">
    <div class="row">
        {{#each reportes}}
            <div class="col-md-3">
                <div class="card text-center" style="background-color: darkturquoise;">
                    <div class="card-body">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                        <h4 class="card-title " style="color: darkgreen;">{{observacion}}</h4>
                        <p class="m-3">
                            {{descripcion}}
                        </p>
                        <p>{{timeago created_at}}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger">Delete report</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay ningun reporte personal</p>
                    <a href="/links/add">Crea uno!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>